<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="28dp">

    <RelativeLayout
        style="@style/list_item"
        android:layout_marginTop="@dimen/spacing_small">

        <ImageView
            style="@style/icon.left"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing_normal"
            android:layout_marginStart="@dimen/spacing_normal"
            android:src="@drawable/ic_call_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_larger"
            android:layout_marginStart="@dimen/spacing_larger"
            android:orientation="vertical"
            android:paddingEnd="@dimen/spacing_larger"
            android:paddingRight="@dimen/spacing_larger"
            android:layout_centerVertical="true">

            <TextView
                style="@style/font.medium"
                android:id="@+id/txt_phone_value"
                android:text="@string/fragment.profile.phone.value"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat,UnusedAttribute"/>

            <TextView
                style="@style/font.regular"
                android:id="@+id/txt_phone_label"
                android:text="@string/fragment.profile.phone.label.mobile"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat,UnusedAttribute"/>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_phone_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">

                <EditText
                    android:id="@+id/et_phone_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment.profile.phone.label.mobile"
                    android:enabled="true"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_sms_24dp" />

    </RelativeLayout>

    <!--<View style="@style/divider.inset"/>-->

    <RelativeLayout
        style="@style/list_item"
        android:layout_marginTop="@dimen/spacing_small">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_email_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_larger"
            android:layout_marginStart="@dimen/spacing_larger"
            android:orientation="vertical"
            android:paddingEnd="@dimen/spacing_larger"
            android:paddingRight="@dimen/spacing_larger"
            android:layout_centerVertical="true">

            <TextView
                style="@style/font.medium"
                android:id="@+id/txt_email_value"
                android:text="@string/fragment.profile.email.value"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat,UnusedAttribute" />

            <TextView
                style="@style/font.regular"
                android:id="@+id/txt_email_label"
                android:text="@string/fragment.profile.email.label"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat,UnusedAttribute" />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/et_email_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/et_email_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/fragment.profile.email.label" />

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <ImageView
            style="@style/icon.right"
            android:src="@drawable/ic_send_24dp" />

    </RelativeLayout>

    <!--<View style="@style/divider.inset"/>-->

