    <View style="@style/divider.inset" />

    <RelativeLayout
        style="@style/list_item"
        android:layout_marginTop="@dimen/spacing_small">

        <ImageView
            style="@style/icon.left"
            android:src="@drawable/ic_info_outline_24dp" />

        <LinearLayout
            android:layout_width="match_parent"
